- (int) closestTime:(float)t {
	float minTimeDif = 999999.9;
	int index = 0;
	for(int i=0; i<[drawingPoints count]; i++) {
		PathPoint * p = [drawingPoints objectAtIndex:i];
		float dif = p.t - t;
		if(fabs(dif) < fabs(minTimeDif)){
			minTimeDif = dif;
			index = i;
		}
	}
	
	return index;
}

