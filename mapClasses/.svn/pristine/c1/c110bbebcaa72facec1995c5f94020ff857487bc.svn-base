#import <UIKit/UIKit.h>

typedef enum  {
	kGradientTypeTop,
	kGradientTypeMiddle,
	kGradientTypeBottom
} GradientType;
	
@interface GradientView : UIView {
	UIColor * startColor;
	UIColor * endColor;
	float gradientHeight;
	GradientType gradientType;
}

@property (nonatomic, retain) UIColor * startColor;
@property (nonatomic, retain) UIColor * endColor;
@property (nonatomic, assign) float gradientHeight;
@property (nonatomic, assign) GradientType gradientType;;

@end
